#Write a Python program to ask for a user's name and year of birth, then calculate and display their age.
import datetime 

name = input ("Insert your name (name): ")
year_of_birth = int(input("Insert your year of birth (year_of_birth):  "))

current_date = datetime.datetime.now()
current_year = current_date.year 
age = current_date.year - year_of_birth 
print(f"Your age is {age}")

# extract car names 
txt = 'LMaasleitbtui' 

car_name = 'Lamborghini'
print(car_name)

#extract car name
txt = 'MsaatmiazD'

car_name = 'Maserati'
print(car_name)

#Extract the residence area from the following text:
txt = "I'am John. I am from London"

city_name = txt.split("from")[-1]
print(city_name)

#Write a Python program that takes a user input string and prints it in reverse order.
txt = input("Type any text to reverse")

def str_reverser():
    return txt[::-1]
str_reverser()

# check if palindrome 
txt = input("Enter a word: ")
def palindrome():
    if txt == txt[::-1]:
        print("palindrome")
    else:
        print("not palindrome")
palindrome()

#extract domain of an Email
email = input("Enter  your Email: ")
abc = '@'
position = email.find(abc)
if position != -1: 
    res = email[position + 1:]
    print(res)
else:
    print(f'Domain part has not been identified')
